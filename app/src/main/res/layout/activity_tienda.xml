<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TiendaActivity"
    android:background="@drawable/fondo">

    <!-- MONEDAS -->
    <TextView
        android:id="@+id/textViewMonedas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Monedes: 0"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textSize="18sp"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="24dp" />

    <!-- ESPADA -->
    <TextView
        android:id="@+id/textEspada"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="48dp"
        android:text="Imagen"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewMonedas" />

    <Button
        android:id="@+id/btnComprarEspada"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Comprar"
        android:backgroundTint="#020202"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toTopOf="@+id/textEspada"
        app:layout_constraintBottom_toBottomOf="@+id/textEspada"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="24dp" />

    <!-- ESCUDO -->
    <TextView
        android:id="@+id/textEscudo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="48dp"
        android:text="Imagen"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textEspada" />

    <Button
        android:id="@+id/btnComprarEscudo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Comprar"
        android:backgroundTint="#020202"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toTopOf="@+id/textEscudo"
        app:layout_constraintBottom_toBottomOf="@+id/textEscudo"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="24dp" />

    <!-- POCIÓN -->
    <TextView
        android:id="@+id/textPocion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="48dp"
        android:text="Imagen"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textEscudo" />

    <Button
        android:id="@+id/btnComprarPocion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Comprar"
        android:backgroundTint="#020202"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toTopOf="@+id/textPocion"
        app:layout_constraintBottom_toBottomOf="@+id/textPocion"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="24dp" />

    <!-- BOTÓN VOLVER -->
    <Button
        android:id="@+id/btnBackToInicioLogIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tornar"
        android:backgroundTint="#009688"
        android:textColor="@android:color/white"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
